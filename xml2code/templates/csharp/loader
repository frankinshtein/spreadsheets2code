        private static List<T> UtilParse_String2List<T>(string st, Func<string, T> fn) {
            var ls = new List<T>();
            if (st.Length > 0){
                var items = st.Split(',');
                for (int i = 0; i < items.Length; ++i) {
                    var item = items[i].Trim();
                    var res = fn(item);
                    ls.Add(res);
                }
            }
            return ls;
        }

